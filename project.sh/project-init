#!/bin/bash

# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -euo pipefail
IFS=$'\n\t'


# create files from template
nix flake new -t github:Samayel/qnixpkgs#flake-project .

# create flake.lock
nix flake metadata >/dev/null

# initialize git
git init
git add .

# initialize direnv
direnv allow
